<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="mat name"
        android:id="@+id/textMaterialName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="#2b2929"
            android:layout_weight="0.6"
            android:text="Warehouse Name"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

          <TextView
            android:layout_weight="0.4"
            android:id="@+id/textWarehouseName"
            android:hint="warehousename"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:textColor="#2b2929"
            android:textSize="15sp"
            android:text="Material Code"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="15sp"
            android:id="@+id/materialCode"
            android:text="mtrl code"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <TextView
            android:textColor="#2b2929"
            android:textSize="15sp"
            android:text="Available Quantity"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="15sp"
            android:id="@+id/availableQuantity"
            android:hint="avail qty"
            android:layout_weight="0.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
          android:textColor="#2b2929"
          android:textSize="15sp"
          android:layout_weight="0.6"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Unit Price"/>

      <TextView
          android:layout_weight="0.4"
          android:textSize="15sp"
          android:id="@+id/unitPrice"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="unitPrice"/>

  </LinearLayout>

</LinearLayout>